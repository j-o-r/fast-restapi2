{
  "compilerOptions": {
    "module": "es2022",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "lib/*"
      ]
    }
  },
  "include": [
    "lib/**/*",
    "scenarios/**/*"
  ],
  "types": [
    "node"
  ]
}